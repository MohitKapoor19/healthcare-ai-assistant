# ========================================
# HEALTHCARE AI APPLICATION - ENVIRONMENT TEMPLATE
# ========================================
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database?sslmode=require

# AI Service Configuration
GROQ_API_KEY_REASONER=your_groq_reasoner_api_key_here
GROQ_API_KEY_CHAT=your_groq_chat_api_key_here

# Server Configuration
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# API Performance Configuration
API_CACHE_TTL=300000
API_REQUEST_TIMEOUT=30000
API_MAX_RETRIES=3
API_BATCH_SIZE=5
API_RATE_LIMIT_WINDOW=60000
API_RATE_LIMIT_MAX_REQUESTS=100

# Performance & Monitoring
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_TRACKING=true
ENABLE_HEALTH_CHECK=true
HEALTH_CHECK_INTERVAL=30000

# Security Configuration
ENABLE_RATE_LIMITING=true
MAX_REQUESTS_PER_MINUTE=100
ENABLE_CORS=true
ENABLE_HELMET=true
SESSION_SECRET=change-this-to-a-secure-random-string-in-production
COOKIE_SECURE=true
COOKIE_HTTP_ONLY=true
COOKIE_SAME_SITE=strict

# Real-time Features
ENABLE_WEBSOCKET=true
WEBSOCKET_PORT=3001
ENABLE_REAL_TIME_MONITORING=true

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/healthcare-ai.log
ENABLE_FILE_LOGGING=false
ENABLE_CONSOLE_LOGGING=true

# Cache Configuration
ENABLE_REDIS_CACHE=false
REDIS_URL=redis://localhost:6379
CACHE_DEFAULT_TTL=3600

# Deployment Configuration
BUILD_PATH=./dist
STATIC_PATH=./dist/public
ENABLE_GZIP_COMPRESSION=true
ENABLE_STATIC_FILE_CACHING=true
STATIC_CACHE_MAX_AGE=86400000
